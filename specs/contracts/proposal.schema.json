{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://clinical-agentic-control-plane/specs/contracts/proposal.schema.json",
  "title": "Proposal",
  "description": "Schema for HMAC-signed proposals generated by the control-plane.",
  "type": "object",
  "required": ["proposal_id", "clinic_id", "appointment_id", "patient_id", "risk_score", "risk_level", "actions", "hmac_signature", "created_at"],
  "properties": {
    "proposal_id": {
      "type": "string",
      "format": "uuid"
    },
    "clinic_id": {
      "type": "string",
      "minLength": 1
    },
    "appointment_id": {
      "type": "string",
      "minLength": 1
    },
    "patient_id": {
      "type": "string",
      "minLength": 1
    },
    "risk_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action_type", "channel", "template", "scheduled_at"],
        "properties": {
          "action_type": {
            "type": "string",
            "enum": ["send_reminder", "send_confirmation", "reschedule"]
          },
          "channel": {
            "type": "string",
            "enum": ["whatsapp", "sms"]
          },
          "template": {
            "type": "string"
          },
          "scheduled_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "hmac_signature": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
