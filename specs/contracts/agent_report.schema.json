{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://clinical-agentic-control-plane/specs/contracts/agent_report.schema.json",
  "title": "Agent Report",
  "description": "Schema for the auditable agent report that documents decisions and impact.",
  "type": "object",
  "required": ["report_id", "period", "clinic_id", "summary", "decisions", "generated_at"],
  "properties": {
    "report_id": {
      "type": "string",
      "format": "uuid"
    },
    "period": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" }
      }
    },
    "clinic_id": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_appointments": { "type": "integer", "minimum": 0 },
        "total_no_shows": { "type": "integer", "minimum": 0 },
        "no_show_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "reminders_sent": { "type": "integer", "minimum": 0 },
        "confirmations_received": { "type": "integer", "minimum": 0 },
        "reschedules": { "type": "integer", "minimum": 0 },
        "estimated_revenue_recovered": { "type": "number", "minimum": 0 }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["decision_id", "appointment_id", "risk_level", "action_taken", "outcome"],
        "properties": {
          "decision_id": { "type": "string", "format": "uuid" },
          "appointment_id": { "type": "string" },
          "patient_id": { "type": "string" },
          "risk_level": { "type": "string", "enum": ["low", "medium", "high"] },
          "risk_score": { "type": "number" },
          "action_taken": { "type": "string" },
          "channel": { "type": "string" },
          "outcome": { "type": "string", "enum": ["confirmed", "no_show", "rescheduled", "cancelled", "pending"] },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
